<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <packaging>pom</packaging>
        
    <parent>
        <groupId>com.jtendo</groupId>
        <artifactId>jtendo-mobicents-parent</artifactId>
        <version>1.0.0.FINAL</version>
    </parent>
	
    <artifactId>http-servlet-parent</artifactId>
    <groupId>com.jtendo.org.mobicents.resources</groupId>
    <version>2.8.0-SNAPSHOT</version>
	
    <name>Mobicents :: Resources :: ${pom.artifactId}</name>

    <modules>
        <module>common</module>
        <module>war</module>
        <module>events</module>
        <module>ratype</module>
        <module>ra</module>
        <module>du</module>
    </modules>
	
    <properties>
        <servlet-name>mobicents</servlet-name>
        <docs.profile>mobicents</docs.profile>
        <docs.ra.name>HTTP Servlet</docs.ra.name>
        <docs.ra.dirname>http-servlet</docs.ra.dirname>
        <docs.bookid>HttpServlet</docs.bookid>
    </properties>
    
    <distributionManagement>
        <repository>
            <id>jtendo-repository</id>
            <name>jtendo-repository-releases</name>
            <url>http://192.168.1.15:8281/artifactory/libs-release-local</url>
        </repository>
        <snapshotRepository>
            <id>jtendo-repository</id>
            <name>jtendo-repository-snapshots</name>
            <url>http://192.168.1.15:8281/artifactory/libs-snapshot-local</url>
        </snapshotRepository>
    </distributionManagement>
    <repositories>
        <repository>
            <id>jtendo-repository</id>
            <name>libs-release</name>
            <url>http://192.168.1.15:8281/artifactory/repo</url>
            <snapshots>
                <enabled>true</enabled>
                <updatePolicy>never</updatePolicy>
            </snapshots>
        </repository>
    </repositories>
    <pluginRepositories>
        <pluginRepository>
            <id>jtendo-repository</id>
            <name>plugins-release</name>
            <url>http://192.168.1.15:8281/artifactory/repo</url>
            <snapshots>
                <enabled>true</enabled>
                <updatePolicy>never</updatePolicy>
            </snapshots>
        </pluginRepository>
    </pluginRepositories>   
	
    <build>
        <plugins>
            <plugin>
                <artifactId>maven-eclipse-plugin</artifactId>
                <groupId>org.mobicents.tools</groupId>
                <inherited>false</inherited>
                <executions />
                <configuration>
                    <excludePoms />
                    <classpathExcludes>
                        <exclude>xml-apis:xml-apis</exclude>
                        <exclude>jtidy:jtidy</exclude>													
                    </classpathExcludes>
                    <resolveTransitiveDependencies>true</resolveTransitiveDependencies>
                    <eclipseProjectName>slee-ra-http-servlet</eclipseProjectName>
                </configuration>
            </plugin>
        </plugins>
    </build>
	
    <profiles>
        <profile>
            <id>release</id>
            <modules>
                <module>docs</module>
                <module>release</module>
            </modules>
        </profile>
        <profile>
            <id>maven-release</id>
            <modules>
                <module>docs</module>
                <module>release</module>
            </modules>				
        </profile>
    </profiles>
	
</project>
